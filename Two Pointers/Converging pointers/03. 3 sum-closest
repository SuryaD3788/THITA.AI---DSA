class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        int n=nums.size();
        sort(nums.begin(),nums.end());
        int i=0;
        int curr=0;
        int closest=nums[0]+nums[1]+nums[2];
        for(int i=0;i<n-2;i++)
        {
            int j=i+1;
            int k=n-1;
            while(j<k)
            {
                curr=nums[i]+nums[j]+nums[k];
                if(abs(curr-target)<abs(closest-target) || abs(curr-target)==abs(closest-target) && curr>closest)
                {
                    closest=curr;
                }
                if(curr==target) return curr;
                else if(curr<target) j++;
                else{
                    k--;
                }
            }
        }
       return closest;
    }
};
