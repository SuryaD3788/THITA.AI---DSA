class Solution {
  public:
    int maxWater(vector<int> &arr) {
        // code here
         int i=0;
        int n=arr.size();
        int j=n-1;
        int maxi_area=INT_MIN;
        int curr_area=0;
        if(arr.size()==1) return 0;
        while(i<j)
        {
            curr_area=((min(arr[j],arr[i])*(j-i)));
            maxi_area=max(maxi_area,curr_area);
            if(arr[i]>arr[j])
            {
                j--;
            }
            else{
                i++;
            }
        }
        return maxi_area;
    }
};
